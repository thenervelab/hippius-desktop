{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Hippius",
    "version": "0.1.2",
    "identifier": "hippius.com",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:3000",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../out"
    },
    "plugins": {
        "fs": {
            "requireLiteralLeadingDot": false
        },
        "updater": {
            "active": true,
            "windows": {
                "installMode": "passive"
            },
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQwNzAxNTdDOEIxRDUxNzIKUldSeVVSMkxmQlZ3ME5BQXVHbFdaVHNOdlBNMUp3M2dUYXM2SGZYL2w1a0tVUkZBM3NhSHpDTkEK",
            "endpoints": [
                "https://github.com/thenervelab/hippius-desktop/releases/latest/download/latest.json"
            ],
            "dangerousInsecureTransportProtocol": false
        }
    },
    "app": {
        "windows": [{
            "dragDropEnabled": false,
            "title": "Hippius",
            "width": 1320,
            "height": 1000,
            "visible": true,
            "center": true,
            "resizable": true
        }],

        "security": {
            "capabilities": ["default"],
            "csp": null,
            "assetProtocol": {
                "enable": true,
                "scope": ["$HOME/**", "%USERPROFILE%/**", "$RESOURCE/**"]
            }
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "createUpdaterArtifacts": true,
        "resources": ["icons", "icons/icon.png", "icons/trayIcon.png"],
        "macOS": {
            "entitlements": "entitlements.plist",
            "exceptionDomain": "hippius.com",
            "frameworks": [],
            "providerShortName": "Hippius",
            "signingIdentity": null,
            "hardenedRuntime": true,
            "minimumSystemVersion": "10.13.0"
        },
        "windows": {
            "certificateThumbprint": null,
            "digestAlgorithm": "sha256",
            "timestampUrl": "http://timestamp.digicert.com",
            "wix": {
                "language": "en-US"
            },
            "nsis": {
                "installerIcon": "icons/icon.ico",
                "headerImage": "installer/header.bmp",
                "sidebarImage": "installer/sidebar.bmp",
                "displayLanguageSelector": false
            }
        }
    }
}