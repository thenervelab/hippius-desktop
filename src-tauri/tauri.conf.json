{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Hippius",
  "version": "0.1.0-dev.1",
  "identifier": "hippius.com",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../out"
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "updater": {
      "active": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDIxOTNGRDMzQjcyQ0E3MzgKUldRNHB5eTNNLzJUSWRWM2wwYnJidGVOclR6eWoxb3BDcDIvRHAyQWRmTnNTSzBSMVpjMXRud3QK",
      "endpoints": ["http://127.0.0.1:8000/updater.json"]
    }
  },
  "app": {
    "windows": [
      {
        "dragDropEnabled": false,
        "title": "Hippius",
        "width": 1320,
        "height": 1000
      }
    ],

    "security": {
      "capabilities": ["default", "desktop"],
      "csp": {
        "default-src": "'self' ipc: asset: http://asset.localhost",
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "media-src": "'self' asset: http://asset.localhost blob: data:",
        "connect-src": "ipc: http://ipc.localhost asset: http://asset.localhost",
        "style-src": "'self' 'unsafe-inline'",
        "font-src": "'self' asset: http://asset.localhost data:",
        "frame-src": "'self' asset: http://asset.localhost"
      },
      "assetProtocol": {
        "enable": true,
        "scope": ["$HOME/**", "%USERPROFILE%/**", "$RESOURCE/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true,
    "resources": ["icons", "icons/icon.png", "icons/trayIcon.png"]
  }
}
