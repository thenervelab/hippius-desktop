{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Allow read, write & exists on AppLocalData/hippius-desktop.db and enable event communication",
    "windows": ["main"],
    "permissions": [
        "core:default",
        "opener:default",
        "fs:default",
        {
            "identifier": "opener:allow-open-path",
            "allow": [{
                "path": "/**/*"
            }]
        },
        {
            "identifier": "fs:allow-exists",
            "allow": [{
                "path": "$APPLOCALDATA/hippius-desktop.db"
            }]
        },
        {
            "identifier": "fs:allow-write-file",
            "allow": [{
                "path": "$APPLOCALDATA/hippius-desktop.db"
            }]
        },
        {
            "identifier": "fs:allow-read-file",
            "allow": [{
                "path": "$APPLOCALDATA/hippius-desktop.db"
            }]
        },
        {
            "identifier": "fs:allow-applocaldata-read-recursive",
            "allow": [{
                "path": "$APPLOCALDATA/hippius-desktop.db"
            }]
        },
        {
            "identifier": "fs:allow-applocaldata-write-recursive",
            "allow": [{
                "path": "$APPLOCALDATA/hippius-desktop.db"
            }]
        },
        {
            "identifier": "fs:allow-mkdir",
            "allow": [{
                "path": "$APPLOCALDATA"
            }]
        },
        "core:event:allow-listen",
        "core:event:allow-unlisten",
        "core:event:allow-emit",
        "core:event:allow-emit-to",
        "dialog:allow-save",
        "dialog:default",
        "http:default",
        "core:menu:allow-set-text",
        "core:menu:allow-insert",
        "core:menu:allow-remove",
        "core:menu:allow-new",
        "core:menu:allow-items",
        "core:menu:allow-get",
        "core:tray:default",
        "updater:default",
        "process:default",
        "process:allow-restart",
        "core:window:default",
        "core:window:allow-hide",
        "core:window:allow-close",
        "core:window:allow-set-size",
        "core:window:allow-center",
        "core:window:allow-show",
        "core:window:allow-set-resizable"
    ]
}